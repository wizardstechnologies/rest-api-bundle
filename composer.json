{
  "name": "wizards/rest-bundle",
  "description": "Integration of php-rest-api into Symfony.",
  "keywords": [ "rest", "hateoas", "jsonapi", "api" ],
  "type": "symfony-bundle",
  "license": "MIT",
  "authors": [
    {
      "name": "Romain Richard",
      "email": "bigzounet@hotmail.com"
    }
  ],
  "require": {
    "php": ">=7.3",
    "ext-json": "*",
    "nyholm/psr7": "^1.1",
    "pagerfanta/pagerfanta": "^2.0",
    "symfony/http-kernel": "^4.4|^5.0",
    "symfony/psr-http-message-bridge": "^2.0.0",
    "sensio/framework-extra-bundle": "^5.2",
    "wizards/rest-api": "0.8.2"
  },
  "require-dev": {
    "symfony/form": "^4.4|^5.0",
    "phpstan/phpstan": "^0.12",
    "squizlabs/php_codesniffer": "^3.5",
    "phpmd/phpmd": "^2.9",
    "phpunit/phpunit": "^9.2",
    "symfony/phpunit-bridge": "^4.4|^5.0",
    "symfony/var-dumper": "^4.4|^5.0"
  },
  "autoload": {
    "psr-0": { "Wizards\\RestBundle": "" }
  },
  "autoload-dev": {
    "psr-0": {
      "WizardsTest": "tests/"
    }
  },
  "target-dir": "Wizards/RestBundle"
}
