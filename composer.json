{
  "name": "wizards/rest-bundle",
  "description": "Integration of php-rest-api into Symfony.",
  "keywords": [ "rest", "hateoas", "jsonapi", "api" ],
  "type": "symfony-bundle",
  "license": "MIT",
  "authors": [
    {
      "name": "Romain Richard",
      "email": "rrichard.ext@wedigital.garden"
    }
  ],
  "require": {
    "php": ">7",
    "ext-json": "*",
    "wizards/rest-api": "0.7.3",
    "symfony/http-kernel": "^4.1",
    "symfony/psr-http-message-bridge": "^1.2",
    "sensio/framework-extra-bundle": "^5.2",
    "nyholm/psr7": "^1.1"
  },
  "require-dev": {
    "symfony/form": "^4.1",
    "phpstan/phpstan": "^0.10.8",
    "squizlabs/php_codesniffer": "^3.4",
    "phpmd/phpmd": "^2.6",
    "phpunit/phpunit": "^7.5",
    "symfony/phpunit-bridge": "^4.2"
  },
  "autoload": {
    "psr-0": { "Wizards\\RestBundle": "" }
  },
  "autoload-dev": {
    "psr-0": {
      "WizardsTest": "tests/"
    }
  },
  "target-dir": "Wizards/RestBundle"
}
